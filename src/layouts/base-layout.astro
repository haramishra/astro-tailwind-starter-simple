---
import BaseHead from "@/components/layout/base-head.astro";
import TailwindIndicator from "@/components/layout/tailwind-indicator.astro";
import { cn } from "@/utils/cn";

// Supports weights 200-800
import "@fontsource-variable/bricolage-grotesque";
type Props = {
  title: string;
  description?: string;
  bodyClass?: string;
};

const { title, description, bodyClass } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class={cn("flex flex-col min-h-screen", bodyClass)}>
    <slot />
    <TailwindIndicator />
  </body>
</html>
